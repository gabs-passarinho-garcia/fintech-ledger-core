{
  "name": "fintech-ledger-core",
  "version": "0.1.0",
  "description": "High-performance financial ledger engine focused on atomic consistency and decoupled architecture",
  "license": "GPL-3.0-or-later",
  "private": true,
  "type": "module",
  "workspaces": ["backend", "frontend"],
  "scripts": {
    "dev": "bun --filter backend dev",
    "dev:frontend": "bun --filter fintech-ledger-core-frontend dev",
    "dev:all": "bun --filter backend --filter fintech-ledger-core-frontend dev",
    "prod": "bun --filter backend prod",
    "check:type": "bun --filter backend check:type && bun --filter fintech-ledger-core-frontend type-check",
    "build": "bun --filter backend build",
    "build:prod": "bun --filter backend build:prod",
    "build:frontend": "bun --filter fintech-ledger-core-frontend build",
    "test": "bun --filter backend test && bun --filter fintech-ledger-core-frontend test",
    "test:cov": "bun --filter backend test:cov && bun --filter fintech-ledger-core-frontend test:cov",
    "lint": "bun --filter backend lint && bun --filter fintech-ledger-core-frontend lint",
    "lint:fix": "bun --filter backend lint:fix && bun --filter fintech-ledger-core-frontend lint:fix",
    "check": "bun run lint && bun run check:type",
    "db:studio": "bun --filter backend db:studio",
    "db:update": "bun --filter backend db:update",
    "db:migrate": "bun --filter backend db:migrate",
    "db:deploy": "bun --filter backend db:deploy",
    "db:init": "bun --filter backend db:init",
    "db:seed": "bun --filter backend db:seed"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "3.908.0",
    "@aws-sdk/client-secrets-manager": "3.908.0",
    "@aws-sdk/client-sqs": "3.908.0",
    "@aws-sdk/credential-providers": "3.908.0",
    "@elysiajs/cors": "1.4.0",
    "@elysiajs/opentelemetry": "^1.1.0",
    "@elysiajs/server-timing": "^1.1.0",
    "@elysiajs/swagger": "1.2.0",
    "@noble/hashes": "^2.0.1",
    "@opentelemetry/auto-instrumentations-node": "0.65.0",
    "@opentelemetry/exporter-otlp-http": "0.26.0",
    "@opentelemetry/exporter-trace-otlp-proto": "0.206.0",
    "@opentelemetry/instrumentation-pg": "0.59.0",
    "@opentelemetry/sdk-trace-node": "2.1.0",
    "@prisma/adapter-pg": "7.0.0",
    "@prisma/client": "7.0.0",
    "@sentry/bun": "^8.45.1",
    "@sentry/opentelemetry": "^8.45.1",
    "@sinclair/typebox": "0.34.41",
    "argon2": "^0.44.0",
    "awilix": "12.0.5",
    "aws-jwt-verify": "^5.0.0",
    "decimal.js": "10.6.0",
    "dotenv": "17.2.3",
    "elysia": "1.4.11",
    "elysia-rate-limit": "4.4.0",
    "pg": "8.16.3",
    "uuidv7": "^1.0.2",
    "winston": "3.18.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-sonarjs": "3.0.5",
    "prettier": "3.6.2",
    "typescript": "5.9.3"
  },
  "imports": {
    "@/*": "./*"
  },
  "trustedDependencies": [
    "@prisma/client",
    "@prisma/engines",
    "argon2",
    "prisma",
    "protobufjs"
  ]
}
