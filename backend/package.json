{
  "name": "backend",
  "version": "0.1.0",
  "description": "Backend API for Fintech Ledger Core",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "prod": "bun run dist/server.js",
    "check:type": "bunx --bun tsc --noEmit",
    "build": "bunx --bun tsc --outDir dist",
    "build:prod": "bunx --bun tsc --outDir dist",
    "test": "bun test",
    "test:cov": "bun test --coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "check": "bun run lint && bun run check:type",
    "db:studio": "bunx prisma studio",
    "db:update": "bunx prisma migrate dev",
    "db:migrate": "bunx prisma migrate dev --create-only",
    "db:deploy": "bunx prisma migrate deploy",
    "db:init": "bunx prisma generate",
    "db:seed": "bunx prisma db seed"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "3.908.0",
    "@aws-sdk/client-secrets-manager": "3.908.0",
    "@aws-sdk/client-sqs": "3.908.0",
    "@aws-sdk/credential-providers": "3.908.0",
    "@elysiajs/cors": "1.4.0",
    "@elysiajs/opentelemetry": "^1.1.0",
    "@elysiajs/server-timing": "^1.1.0",
    "@elysiajs/swagger": "1.2.0",
    "@noble/hashes": "^2.0.1",
    "@opentelemetry/auto-instrumentations-node": "0.65.0",
    "@opentelemetry/exporter-otlp-http": "0.26.0",
    "@opentelemetry/exporter-trace-otlp-proto": "0.206.0",
    "@opentelemetry/instrumentation-pg": "0.59.0",
    "@opentelemetry/sdk-trace-node": "2.1.0",
    "@prisma/adapter-pg": "7.0.0",
    "@prisma/client": "7.0.0",
    "@sentry/bun": "^8.45.1",
    "@sentry/opentelemetry": "^8.45.1",
    "@sinclair/typebox": "0.34.41",
    "argon2": "^0.44.0",
    "awilix": "12.0.5",
    "aws-jwt-verify": "^5.0.0",
    "decimal.js": "10.6.0",
    "dotenv": "17.2.3",
    "elysia": "1.4.11",
    "elysia-rate-limit": "4.4.0",
    "pg": "8.16.3",
    "uuidv7": "^1.0.2",
    "winston": "3.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.17.0",
    "@types/bun": "1.3.0",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-sonarjs": "3.0.5",
    "globals": "15.14.0",
    "prettier": "3.6.2",
    "prettier-plugin-prisma": "5.0.0",
    "prisma": "7.0.0",
    "typescript": "5.9.3"
  },
  "imports": {
    "@/*": "./src/*"
  },
  "trustedDependencies": [
    "@prisma/client",
    "@prisma/engines",
    "argon2",
    "prisma",
    "protobufjs"
  ]
}

