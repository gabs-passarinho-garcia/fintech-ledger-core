# Application
APP_ENV=dev
SERVER_PORT=3000
CORS_ORIGIN=*

# Database
DATABASE_URL="postgresql://ledger_user:ledger_password@localhost:5432/ledger_core_db"

# AWS Configuration (for LocalStack)
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
LOCAL_DEVELOPMENT=true

# Queue Configuration
QUEUE_PREFIX=ledger-core

# AWS Cognito Configuration
AWS_COGNITO_API_VERSION=2016-04-18
AWS_COGNITO_USER_POOL_ID=your-user-pool-id
AWS_COGNITO_CLIENT_ID=your-client-id
AWS_COGNITO_CLIENT_SECRET=your-client-secret

# Secrets Manager
# API_KEY is stored in AWS Secrets Manager or can be set as environment variable
API_KEY=your-api-key-here

